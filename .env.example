# Environment Configuration for Radio PWA

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/radio-pwa

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# AzuraCast Configuration
AZURACAST_API_URL=https://your-azuracast-instance.com/api
AZURACAST_API_KEY=your-azuracast-api-key

# ZenoFM Configuration
ZENOFM_API_URL=https://zeno.fm/api
ZENOFM_STREAM_ID=your-stream-id

# VAPID Keys for Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# External API Keys
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/radio-pwa.log